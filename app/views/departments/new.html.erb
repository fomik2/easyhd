<h1>Создать новое подразделение</h1>
<%= simple_form_for :department, html: {class: 'form-horizontal' } do |f| %>
  <%= f.input :name, label: 'Название'  %>
  <%= f.input :number_of_employees, label: 'Количество сотрудников' %>
  <%= f.button :submit, label: 'Создать', class: "btn btn-primary" %>
<% end %>
